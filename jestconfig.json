{
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["js", "mjs", "cjs", "jsx", "ts", "tsx", "json", "node"],
    "testEnvironment": "jsdom",
    "moduleDirectories": ["node_modules", "src"],
    "verbose": true,
    "rootDir": "./",
    "transformIgnorePatterns": ["<rootDir>/node_modules"]
  }